<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/recycler_item_selector"
                  android:clickable="true"
                  android:orientation="vertical"
                  android:layout_marginLeft="@dimen/activity_repairs_item_horizontal_margin"
                  android:layout_marginRight="@dimen/activity_repairs_item_horizontal_margin"
                  android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue400"
        android:orientation="horizontal">


        <TextView
            style="@style/RepairsTextTitle"
            android:textColor="@color/write"
            android:textStyle="bold"
            android:text="新建时间" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/RepairsTextValue"
            android:textColor="@color/write"
            android:textStyle="bold"
            android:text="2017/04/05" />

    </RelativeLayout>

    <include layout="@layout/item_line_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            style="@style/RepairsTextTitle"
            android:text="专线类型" />

        <TextView
            android:id="@+id/tv_type"
            style="@style/RepairsTextValue"
            android:text="普通" />
    </RelativeLayout>

    <include layout="@layout/item_line_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            style="@style/RepairsTextTitle"
            android:text="专线名称" />

        <TextView
            android:id="@+id/tv_line_num"
            style="@style/RepairsTextValue"
            android:text="" />
    </RelativeLayout>

    <include layout="@layout/item_line_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            style="@style/RepairsTextTitle"
            android:text="新建状态" />

        <TextView
            android:id="@+id/tv_state"
            style="@style/RepairsTextValue"
            android:text="审核中" />
    </RelativeLayout>



</LinearLayout>