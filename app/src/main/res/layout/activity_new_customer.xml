<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_repairs"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/my_toolbar" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:fadingEdge="vertical"
        android:background="@color/colorBackground"
        android:scrollbars="vertical"
        tools:context="hdo.com.andzq.activity.RepairsActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:orientation="vertical"
            android:scrollbars="vertical">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <include layout="@layout/item_line_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">

                        <TextView
                            style="@style/AddCustomerTextTitle"
                            android:text="用户名" />

                        <EditText
                            android:id="@+id/edit_new_customer_name"
                            style="@style/RepairsEditText"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:hint="请输入用户名"
                            android:inputType="text"
                            android:textColor="@color/text_title" />

                    </RelativeLayout>

                    <include layout="@layout/item_line_horizontal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">

                        <TextView
                            style="@style/AddCustomerTextTitle"
                            android:text="账号" />

                        <EditText
                            android:inputType="number"
                            android:id="@+id/edit_new_customer_num"
                            style="@style/RepairsEditText"
                            android:hint="请输入账号"
                            android:textColor="@color/text_title" />


                    </RelativeLayout>

                    <include layout="@layout/item_line_horizontal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">

                        <EditText
                            android:id="@+id/edit_new_customer_pass"
                            style="@style/RepairsEditText"
                            android:hint="请输入密码"
                            android:textColor="@color/text_title" />

                        <TextView
                            style="@style/AddCustomerTextTitle"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="密码" />
                    </RelativeLayout>

                    <include layout="@layout/item_line_horizontal" />

                    <include layout="@layout/item_line_horizontal" />

                </LinearLayout>

                <include layout="@layout/item_line_vertical" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <include layout="@layout/item_line_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">

                        <TextView
                            style="@style/AddCustomerTextTitle"
                            android:text="分公司" />

                        <TextView
                            android:id="@+id/tv_new_customer_fen_gong_si"
                            style="@style/RepairsEditText"
                            android:text=""
                            android:textColor="@color/text_title" />
                    </RelativeLayout>

                    <include layout="@layout/item_line_horizontal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">

                        <TextView
                            style="@style/AddCustomerTextTitle"
                            android:text="二级机构" />

                        <EditText
                            android:id="@+id/edit_new_customer_organization_type"
                            style="@style/RepairsEditText"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:hint="请输入二级机构"
                            android:inputType="text"
                            android:textColor="@color/text_title" />
                    </RelativeLayout>

                    <include layout="@layout/item_line_horizontal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">

                        <TextView
                            style="@style/AddCustomerTextTitle"
                            android:text="集团代码" />

                        <EditText
                            android:id="@+id/edit_zhuanxian"
                            style="@style/RepairsEditText"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:hint="请输入集团代码"
                            android:inputType="text"
                            android:textColor="@color/text_title" />
                    </RelativeLayout>
                    <include layout="@layout/item_line_horizontal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">

                        <TextView
                            style="@style/AddCustomerTextTitle"
                            android:text="专线号码" />

                        <EditText
                            android:id="@+id/edit_special_line_number"
                            style="@style/RepairsEditText"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:hint="请输入专线号码"
                            android:inputType="text"
                            android:textColor="@color/text_title" />
                    </RelativeLayout>

                    <include layout="@layout/item_line_horizontal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">

                        <TextView
                            style="@style/AddCustomerTextTitle"
                            android:text="职位" />

                        <TextView
                            android:id="@+id/edit_new_customer_type"
                            style="@style/RepairsEditText"
                            android:text="政企客户"
                            android:textColor="@color/text_title" />

                    </RelativeLayout>

                    <include layout="@layout/item_line_horizontal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff">

                        <TextView
                            style="@style/AddCustomerTextTitle"
                            android:text="联系方式" />

                        <EditText
                            android:id="@+id/edit_new_customer_phone"
                            style="@style/RepairsEditText"
                            android:hint="请输入联系方式"
                            android:inputType="phone"
                            android:textColor="@color/text_title" />
                    </RelativeLayout>

                    <include layout="@layout/item_line_horizontal" />

                    <include layout="@layout/item_line_horizontal" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <include layout="@layout/item_repairs_button" />
</FrameLayout>

