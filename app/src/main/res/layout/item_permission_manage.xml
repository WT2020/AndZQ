<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/recycler_item_selector"
              android:clickable="true"
              android:layout_marginLeft="@dimen/activity_repairs_item_horizontal_margin"
              android:layout_marginRight="@dimen/activity_repairs_item_horizontal_margin"
              android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/RepairsTextTitle"
            android:text="姓名" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/RepairsTextValue"
            android:text="陈锐" />

    </RelativeLayout>

    <include layout="@layout/item_line_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            style="@style/RepairsTextTitle"
            android:text="集团公司" />

        <TextView
            android:id="@+id/tv_company_name"
            style="@style/RepairsTextValue"
            android:text="中国石油" />
    </RelativeLayout>

    <include layout="@layout/item_line_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            style="@style/RepairsTextTitle"
            android:text="权限" />

        <TextView
            android:id="@+id/tv_permission"
            style="@style/RepairsTextValue"
            android:text="无" />
    </RelativeLayout>

</LinearLayout>