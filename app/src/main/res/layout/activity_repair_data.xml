<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <include layout="@layout/my_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">



    <include layout="@layout/item_line_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                style="@style/RepairsTextTitle"
                android:text="姓名" />

            <TextView
                android:id="@+id/repair_name"
                style="@style/RepairsTextValue"
                android:text="陈锐" />
        </RelativeLayout>

        <include layout="@layout/item_line_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                style="@style/RepairsTextTitle"
                android:text="分公司" />
            <TextView
                android:id="@+id/repair_company"
                style="@style/RepairsTextValue"
                android:text="" />
        </RelativeLayout>

        <include layout="@layout/item_line_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                style="@style/RepairsTextTitle"
                android:text="片区" />
            <TextView
                android:id="@+id/repair_company_location"
                style="@style/RepairsTextValue"
                android:text="" />
        </RelativeLayout>

        <include layout="@layout/item_line_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                style="@style/RepairsTextTitle"
                android:text="身份令牌" />
            <TextView
                android:id="@+id/repair_identity"
                style="@style/RepairsTextValue"
                android:text="" />
        </RelativeLayout>

        <include layout="@layout/item_line_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                style="@style/RepairsTextTitle"
                android:text="联系电话" />

            <TextView
                android:id="@+id/repair_phone_num"
                style="@style/RepairsTextValue"
                android:text="" />
        </RelativeLayout>
            <include layout="@layout/item_line_horizontal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>