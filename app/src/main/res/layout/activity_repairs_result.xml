<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:background="@drawable/recycler_item_selector"
             android:id="@+id/activity_repairs"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <include layout="@layout/my_toolbar"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <include layout="@layout/item_repairs_person_info"/>

        <include layout="@layout/item_repairs_company_info"/>

        <include layout="@layout/item_repairs_description"/>

        <include layout="@layout/item_repairs_photos"/>

        <include layout="@layout/item_repairs_urgency"/>

        <!-- 一个空的textview占位 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>

</FrameLayout>