<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="@dimen/activity_repairs_item_horizontal_margin"
              android:layout_marginRight="@dimen/activity_repairs_item_horizontal_margin"
              android:background="@drawable/recycler_item_selector"
              android:clickable="true"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue400"
        android:orientation="horizontal">


        <TextView
            android:layout_weight="1"
            android:maxLines="1"
            style="@style/RepairsTextTitle"
            android:text="单位名称"
            android:textColor="@color/write"
            android:textStyle="bold"/>

        <TextView
            android:gravity="end"
            android:layout_weight="4"
            android:id="@+id/tv_company"
            style="@style/RepairsTextValue"
            android:text="南充市税务局"
            android:textColor="@color/write"
            android:textStyle="bold"/>

    </LinearLayout>

    <include layout="@layout/item_line_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            style="@style/RepairsTextTitle"
            android:text="申请时间"/>

        <TextView
            android:id="@+id/tv_time"
            style="@style/RepairsTextValue"
            android:text="2017/04/07 12:17"
            android:textColor="@color/text_title"/>
    </RelativeLayout>


    <include layout="@layout/item_line_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            style="@style/RepairsTextTitle"
            android:text="故障类型"/>

        <TextView
            android:id="@+id/tv_type"
            style="@style/RepairsTextValue"
            android:text="设备故障"
            android:textColor="@color/text_title"/>
    </RelativeLayout>

    <include layout="@layout/item_line_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            style="@style/RepairsTextTitle"
            android:text="紧急程度"/>

        <TextView
            android:id="@+id/tv_urgency"
            style="@style/RepairsTextValue"
            android:layout_marginLeft="100dp"
            android:text="非常紧急"
            android:textColor="@color/text_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_centerVertical="true"
            android:src="@drawable/circle_urgency"/>
    </RelativeLayout>

    <include layout="@layout/item_line_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/RepairsTextTitle"
            android:text="维修单状态"/>

        <TextView
            android:id="@+id/tv_state"
            style="@style/RepairsTextValue"
            android:layout_marginLeft="100dp"
            android:text="维修中"
            android:textColor="@color/text_title"/>

    </RelativeLayout>

</LinearLayout>