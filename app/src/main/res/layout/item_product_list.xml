<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="@dimen/activity_repairs_item_horizontal_margin"
              android:layout_marginRight="@dimen/activity_repairs_item_horizontal_margin"
              android:background="@drawable/recycler_item_selector"
              android:clickable="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue400"
        android:orientation="horizontal">


        <TextView
            style="@style/RepairsTextTitle"
            android:text="专线号码"
            android:textColor="@color/write"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_line"
            style="@style/RepairsTextValue"
            android:text="10180154637"
            android:textColor="@color/write"
            android:textStyle="bold"/>

    </RelativeLayout>

    <include layout="@layout/item_line_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_weight="1"
            style="@style/RepairsTextTitle"
            android:text="专线名称"/>

        <TextView
            android:gravity="end"
            android:layout_weight="3"
            android:id="@+id/tv_line_name"
            style="@style/RepairsTextValue"/>
    </LinearLayout>

    <include layout="@layout/item_line_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            style="@style/RepairsTextTitle"
            android:text="专线等级"/>

        <TextView
            android:id="@+id/tv_level"
            style="@style/RepairsTextValue"
            android:text="AAA"/>
    </RelativeLayout>

    <include layout="@layout/item_line_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            style="@style/RepairsTextTitle"
            android:text="专线类型"/>

        <TextView
            android:id="@+id/tv_type"
            style="@style/RepairsTextValue"
            android:text="数据专线"/>
    </RelativeLayout>

    <include layout="@layout/item_line_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            style="@style/RepairsTextTitle"
            android:text="带宽"/>

        <TextView
            android:id="@+id/tv_bandwidth"
            style="@style/RepairsTextValue"
            android:text="10M"/>
    </RelativeLayout>


</LinearLayout>