<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@drawable/layout_background_shape">

        <ImageView
            android:id="@+id/img_head_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/app_icon"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBackground"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <hdo.com.andzq.view.MineView
                android:id="@+id/mv_mine_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <hdo.com.andzq.view.MineView
                android:id="@+id/mv_mine_repairs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <hdo.com.andzq.view.MineView
                android:id="@+id/mv_mine_compain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <hdo.com.andzq.view.MineView
                android:id="@+id/mv_mine_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <hdo.com.andzq.view.MineView
                android:id="@+id/mv_mine_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <hdo.com.andzq.view.MineView
                android:id="@+id/mv_mine_monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <hdo.com.andzq.view.MineView
                android:id="@+id/mv_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <hdo.com.andzq.view.MineView
                android:id="@+id/mv_mine_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <hdo.com.andzq.view.MineView
                android:id="@+id/mv_mine_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>